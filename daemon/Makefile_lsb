include Makefile

LOCAL_CFLAGS += -DDEFAULT_BASE_PATH=\"/var/lib/cml\" \
		-DLOGFILE_DIR=\"/var/log/cml\" \
		-DDEFAULT_CONF_BASE_PATH=\"/etc/cml\" \
		-DSCD_BINARY_NAME=\"cml-scd\"

SBINDIR := /usr/sbin
install:
	mkdir -p ${DESTDIR}${SBINDIR}
	cp cmld ${DESTDIR}${SBINDIR}/
	cp init.d/cmld ${DESTDIR}/etc/init.d/
	mkdir -p ${DESTDIR}/var/lib/cml
	mkdir -p ${DESTDIR}/etc/cml
	echo "uuid: \"$(shell cat /proc/sys/kernel/random/uuid)\"" > ${DESTDIR}/etc/cml/device.conf
	echo "hostedmode: true" >> ${DESTDIR}/etc/cml/device.conf
